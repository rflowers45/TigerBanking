<div class="container p-3">
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Transaction Type
            </th>
            <th>
                How Much
            </th>
            <th>
                Balance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.Date
                </td>
                <td width="25%">
                    @obj.TransactionType
                </td>
                <td width="25%">
                    @obj.Amount
                </td>
                <td width="25%">
                    @obj.Balance
                </td>
            </tr>
        }
    </tbody>
    </table>
    </div>