@model Accounts
@using TigerBank.Models

<form method="post">
    
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Deposit</h2>
        <br />
        </div>
         <div class="mb-3 col-6">
            <select name= "Accounts">
            <option value="" >Select an Account</option>
            <option value="1" >Checking</option>
            <option value="2" >Savings</option>
            <option value="3" >Savings2</option>
            </select>
            </div>
        <div class="mb-3">
            <label asp-for="Balance"></label>
            <input asp-for="Balance" class="form-control" />
            <span asp-validation-for="Balance" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary" style="width: 150px">Deposit</button>
        <a asp-action="Index" class="btn btn-secondary" style="width: 150px">Cancel</a>
    </div>
</form>